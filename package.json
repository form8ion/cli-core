{
  "name": "@form8ion/cli-core",
  "description": "core package to support CLIs using the form8ion ecosystem",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org)",
  "repository": "form8ion/cli-core",
  "bugs": "https://github.com/form8ion/cli-core/issues",
  "homepage": "https://npm.im/@form8ion/cli-core",
  "runkitExampleFilename": "./example.js",
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "sideEffects": false,
  "scripts": {
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "prepack": "run-s build",
    "pregenerate:md": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "lint:lockfile": "lockfile-lint",
    "prepare": "husky",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:peer": "npm ls >/dev/null",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "run-s 'lint:js -- --fix'",
    "lint:publish": "publint --strict",
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*"
  },
  "files": [
    "example.js",
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@10.9.2",
  "devDependencies": {
    "@form8ion/commitlint-config": "2.0.5",
    "@form8ion/eslint-config": "7.0.12",
    "@form8ion/eslint-config-vitest": "1.0.0",
    "@form8ion/remark-lint-preset": "6.0.7",
    "@travi/any": "3.1.2",
    "c8": "10.1.3",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.1.7",
    "lockfile-lint": "4.14.0",
    "npm-run-all2": "7.0.2",
    "publint": "0.3.10",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "6.0.1",
    "rollup": "4.39.0",
    "rollup-plugin-auto-external": "2.0.0",
    "vitest": "3.1.1",
    "vitest-when": "0.6.0"
  }
}
